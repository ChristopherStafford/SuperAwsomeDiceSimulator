<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.HedronCo.dicemod"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.HedronCo.dicemod.Splash"
            android:label="@string/app_name" 
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.HedronCo.dicemod.MainMenu"
            android:label="@string/app_name" 
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="com.HedronCo.dicemod.MAINMENU" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.HedronCo.dicemod.DiceGameActivity"
            android:label="@string/app_name"
            android:screenOrientation="landscape" >
            <intent-filter>
                <action android:name="com.HedronCo.dicemod.DICEGAME" />

                <category android:name="com.hedronco.dicemod.DiceGameActivity" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.HedronCo.dicemod.SelectDiceActivity"
            android:label="@string/title_activity_select_dice"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="com.HedronCo.dicemod.Instructions"
            android:label="@string/title_activity_instructions"
            android:screenOrientation="landscape" >
        </activity>
    </application>

</manifest>
